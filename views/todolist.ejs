</head>
<body id="todobackground">
    <!-- Navbar Begining -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <a class="navbar-brand" href="/">EasySoft</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active mr-2">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="itManager">IT Manager</a>
            </li>
          </ul>
        </div>
    </nav>
      <!-- Navbar End -->

    <div class="container">

        <h1 class="text-light mt-2">Todo List</h1>
        <hr>
        
    <div class="container pt-2">
      <div class="row">
        <div class="col-lg-6 col-sm-12">
          <!-- Todos -->
          <table class="table table-striped table-dark">
            <thead class="table-dark">
              <tr>
                <th scope="col">No.</th>
                <th scope="col">TODO LIST</th>
                <th scope="col">Status</th>
                <th scope="col">id</th>
              </tr>
            </thead>
            <tbody>
              <% let i = 1; for(todo of todos) {%>
                <tr>
                  <th scope="row"><%= i %></th>
                  <td><%= todo.activity %></td>
                  <td><%= todo.status %></td>
                  <td>
                    <a class="text-light" href="#">âœ…</a>
                  </td>
                </tr>
                <% i++ %>
              <% } %>
            </tbody>
          </table>
        </div>

        <div class="col-lg-6 col-sm-12">
            <div class="jumbotron text-info">
            <h1 class="display-4">Daily Task Ready!</h1>
            <p class="lead">This is your list of tasks to finish today.</p>
            <hr class="my-4">
            <h3>
              <a href="/employeeList" class="btn btn-secondary ">back to list</a>
            </h3>
          </div>
        </div>
        
      </div>

    </div>

</body>
</html>